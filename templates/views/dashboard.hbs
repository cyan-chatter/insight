<!DOCTYPE html>
<html>
    <head>
        <script src="https://kit.fontawesome.com/a392ca20cf.js" crossorigin="anonymous"></script>
        <script rel="javascript" src="/js/reload_on_back.js"></script>
      <title>Dashboard</title>
    </head>
     <body>
       <h1>DashBoard</h1>
       <div>
       <i class="fas fa-user"></i>
       <span>{{name}}</span>
       </div><br>
       <div>
       <form action="/{{type}}/logout" method='post'>
       <input type='submit' value='Logout'>
       </form>
       <br>
       <form action="/{{type}}/logoutAll" method='post'>
       <input type='submit' value='LogoutAll'>
       </form>
       </div>

       
    <form action="/students/pretest" method='get' id = 'studenttest'>
    <label for="category">Choose a subject:</label>
      <select name="category" id="subjects">
        <option value="22">Geography</option>
        <option value="17">Science and Nature</option>
        <option value="19">Mathematics</option>
        <option value="11">Entertainment:Movies</option>
      </select>
      <input type='submit' value="Create Test">
    </form>
    
    <span>
      
      <button class = "diffun"><a href = "{{goto}}">{{destination}}</a></button>
      <button class = "diffun2"><a href = "{{goto2}}">{{destination2}}</a></button>
      <button class = "diffun3"><a href = "{{goto3}}">{{destination3}}</a></button>
    </span>

    <script>
      var student_test = document.getElementById('studenttest')
      var result_button = document.querySelector('.diffun')
      if({{{type_str}}}=='teachers')
      {student_test.remove()
       result_button.remove()}
      else{
        document.querySelector('.diffun3').remove()

      }
    </script>

     </body>

</html>